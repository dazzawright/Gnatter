<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bintonet.gnatter.AddFriendActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Who would you like to add ?"
        android:id="@+id/textViewAddFriendActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextAddFriendActivityEmail"
        android:layout_below="@+id/textViewAddFriendActivity"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewAddFriendActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Friend"
        android:id="@+id/btnAddFriendActivitySubmit"
        android:layout_below="@+id/editTextAddFriendActivityEmail"
        android:layout_alignEnd="@+id/editTextAddFriendActivityEmail"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textViewAddFriendActivityResult"
        android:layout_below="@+id/btnAddFriendActivitySubmit"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnAddFriendActivitySubmit" />
</RelativeLayout>
